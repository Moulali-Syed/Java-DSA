package theory;

public class Demo {

	public static void main(String[] args) {

		int a = 10;
		int b = a;
		int c = a;
		System.out.println(a + " " + b + " " + c);
		
		a=20;
		System.out.println(a + " " + b + " " + c);
		
		/*
		 * 10 10 10
			20 10 10
		 */
		
		String name = "apple";
		String nickName = name;
		String petName = name;
		System.out.println(name+" "+nickName+" "+petName);
		
		name="happy";
		System.out.println(name+" "+nickName+" "+petName);
		
		name="cool";
		nickName=name;
		petName=name;
		System.out.println(name+" "+nickName+" "+petName);
	}

}
